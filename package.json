{
  "name": "fullstack-typescript-starter",
  "version": "0.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev --parallel",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "prepare": "husky install"
  },
  "devDependencies": {
    "eslint": "^8.28.0",
    "eslint-config-shared": "workspace:*",
    "husky": "^8.0.2",
    "lint-staged": "^13.0.4",
    "prettier": "latest",
    "turbo": "latest"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "lint-staged": {
    "**/*.{js,jsx,ts,tsx}": [
      "eslint --cache --fix --ignore-path .gitignore",
      "prettier --write --ignore-path .gitignore"
    ],
    "**/*.{css,scss,html,json}": [
      "prettier --write --ignore-path .gitignore"
    ]
  },
  "packageManager": "pnpm@7.17.0"
}
