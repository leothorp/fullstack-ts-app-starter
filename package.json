{
  "name": "fullstack-typescript-starter",
  "version": "0.0.0",
  "private": true,
  "workspaces": [
    "packages/*",
    "services/*"
  ],
  "scripts": {
    "build-client": "./repo_scripts/build_service.sh client",
    "build-server": "./repo_scripts/build_service.sh server",
    "start-server": "dotenv -- pnpm run start --filter server",
    "dev": "dotenv -- turbo run dev --parallel",
    "lint": "eslint --fix --ignore-path=.gitignore \"**/*.{ts,tsx,js,jsx}\"",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "prepare": "husky install"
  },
  "dependencies": {
    "dotenv-cli": "^6.0.0",
    "typescript": "^4.9.3",
    "eslint-config-shared": "workspace:*"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.44.0",
    "eslint": "^8.28.0",
    "husky": "^8.0.2",
    "prettier": "latest",
    "turbo": "latest"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "packageManager": "pnpm@7.17.0"
}
