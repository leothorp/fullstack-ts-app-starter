{
  "name": "fullstack-typescript-starter",
  "version": "0.0.0",
  "private": true,
  "workspaces": [
    "packages/*",
    "services/*"
  ],
  "scripts": {
    "build-client": "./repo_scripts/build_service.sh client",
    "build-server": "./repo_scripts/build_service.sh server",
    "start-server": "pnpm run --filter server start",
    "dev": "./repo_scripts/start_local_db.sh && pnpm run --if-present --parallel dev",
    "lint": "eslint --fix --ignore-path=.gitignore \"**/*.{ts,tsx,js,jsx}\"",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "prepare": "[ -n \"$CI\" ] || husky install"
  },
  "dependencies": {
    "typescript": "^4.9.3",
    "eslint-config-shared": "workspace:*",
    "@typescript-eslint/eslint-plugin": "^5.44.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint": "^8.28.0"
  },
  "devDependencies": {
    "dotenv-cli": "^6.0.0",
    "husky": "^8.0.2",
    "prettier": "latest"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "packageManager": "pnpm@7.17.0"
}
