{
  "extends": "tsconfig/base.json",

  "include": ["src"],
  "exclude": ["node_modules"],
  "compilerOptions": {
    "module": "commonjs",

    "outDir": "dist",
    "baseUrl": "./src",
    "paths": {
      //paths are relative to baseUrl
      "@utilities/*": ["../../../packages/utilities/src/*"]
    }
  },
  // enables cross-workspace auto-imports / type references. The value of 'references' cannot be inherited via 'extends'.

  "references": [{ "path": "../../packages/utilities" }]
}
